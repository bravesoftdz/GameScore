@model IEnumerable<GameScore.Models.Jogo>

@{
    ViewBag.Title = "Index";
}

<h2>Pontos Lançados</h2>

<p>
    <button onclick="location.href='@Url.Action( "Create")';return false;" class="btn btn-info">Lançar Pontos</button>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DataJogo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PontuacaoJogo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DataJogo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PontuacaoJogo)
        </td>
        <td>
            <button onclick="location.href='@Url.Action( "Edit", new { id=item.Id })';return false;" class="btn btn-default">Editar</button>
            <button onclick="location.href='@Url.Action( "Details", new { id=item.Id })';return false;" class="btn btn-info">Detalhes</button>
            <button onclick="location.href='@Url.Action( "Delete", new { id=item.Id })';return false;" class="btn btn-danger">Deletar</button>
        </td>
        
    </tr>
}

</table>
